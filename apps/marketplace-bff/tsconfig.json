{
    "extends": "@meli/typescript-config/base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "lib": ["dom", "es6"],
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist", "./index.ts"],
    "include": ["src/**/*.ts", "tests/**/*.spec.ts", "api/*.ts"]
}
