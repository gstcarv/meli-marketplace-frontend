{
    "extends": "ts-config-single-spa",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true,
        "lib": ["es2022", "DOM", "DOM.Iterable"],
        "moduleDetection": "force",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "strict": true,
        "declarationDir": "dist",
        "target": "ES2022"
    }
}
